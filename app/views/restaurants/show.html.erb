<div class="container p-4">
  <nav class="navbar navbar-light bg-light">
    <form class="form-inline">
      <%= link_to "all restaurants", restaurants_path, class: "btn btn-primary" %>
    </form>
  </nav>
</div>
<div class="container p-4"> <!-- Add container with padding -->
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.phone_numer %></p>
  <p><%= @restaurant.address %></p>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %> <%= review.rating %></li>
    <% end %>
  </ul>
  <%= link_to "Add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
</div>
<br>
